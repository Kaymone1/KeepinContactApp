<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact List</title>
    <link rel="stylesheet" type="text/css" href="./css/style.css">
</head>
<body>
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1>Contact List</h1>
        <div>
            <a href="/contacts/new" class="button">Create New Contact</a>
        </div>
    </div>
    <ul>
        <% contacts.forEach(function(contact) { %>
            <li style="list-style: none; display: flex; align-items: center;">
                <div>
                    <h2><a href="/contacts/<%= contact._id %>"><%= contact.name %></a></h2>
                    <p><strong>Category:</strong> <%= contact.category %></p>
                </div>
                <div class="navs">
                    <a href="/contacts/<%= contact._id %>/edit" class="edit-link">Edit</a>
                    <form action="/contacts/<%= contact._id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button class="delete-button" type="submit">Delete</button>
                    </form>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>
